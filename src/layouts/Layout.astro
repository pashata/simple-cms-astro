---
import '../assets/css/main.css';
const path = (Astro.url.pathname.replace(/\/+$/, "") || "/");

// keep it simple; mirror your SSG routes
const links = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/blog/hello-world", label: "Hello World" },
  { href: "/about", label: "About" },
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Astro Demo</title>
  </head>
  <body>
    <header>
      <nav>
        {links.map(({ href, label }) => (
          <span class={path === href ? "active" : ""}>
            <a href={href}>{label}</a>
          </span>
        ))}
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>Astro SSG demo</small>
    </footer>
  </body>
</html>
